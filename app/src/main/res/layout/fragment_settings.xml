<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="56dp"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_update_title"
        android:textColor="@color/colorMainFont"
        android:textSize="24sp"
        android:paddingHorizontal="32dp"
        android:paddingBottom="16dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="32dp"
        android:layout_height="wrap_content">
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settings_auto_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/settings_auto_update"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorMainFont"
            android:text="@string/settings_auto_update"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_last_updated"
        android:textColor="@color/colorMainFont"
        android:textSize="16sp"
        android:paddingHorizontal="32dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/settings_update_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/settings_update_now"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_budget_title"
        android:textColor="@color/colorMainFont"
        android:textSize="24sp"
        android:paddingHorizontal="32dp"
        android:paddingBottom="8dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_budget_amount_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_budget_amount"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_budget_amount"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_currency_list_title"
        android:textColor="@color/colorMainFont"
        android:textSize="24sp"
        android:paddingHorizontal="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_currency_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="32dp"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        />
</LinearLayout>