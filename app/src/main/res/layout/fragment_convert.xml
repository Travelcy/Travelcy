<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ConvertViewModel"
            type="com.travelcy.travelcy.ui.convert.ConvertViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:padding="32dp"
        android:layout_marginBottom="30dp"
        android:overScrollMode="ifContentScrolls">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.convert.ConvertFragment">

            <RelativeLayout
                android:id="@+id/from_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/from_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/no_network"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/wifi_off"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/from_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/convert_item_height"
                    android:background="@color/colorElevation"
                    android:popupBackground="@color/colorBackground" />

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/ic_expand_more_24px" />
            </RelativeLayout>

            <EditText
                android:id="@+id/from_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/convert_item_height"
                android:layout_marginBottom="40dp"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/colorMainFont"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/switch_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/from_spinner_container" />

            <Button
                android:id="@+id/switch_button"
                android:layout_width="41dp"
                android:layout_height="48dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/ic_resource_switch"
                app:layout_constraintBottom_toTopOf="@+id/to_spinner_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/from_amount" />

            <RelativeLayout
                android:id="@+id/to_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/to_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_button">

                <Button
                    android:id="@+id/geo_location_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/location" />

                <Spinner
                    android:id="@+id/to_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/convert_item_height"
                    android:background="@color/colorElevation"
                    android:popupBackground="@color/colorBackground" />

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/ic_expand_more_24px" />
            </RelativeLayout>

            <EditText
                android:id="@+id/to_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/convert_item_height"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/colorMainFont"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to_spinner_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>